{
    "name": "bluestone/collection",
    "description": "Using array as object.",
    "type": "library",
    "keywords": [
        "array",
        "collection"
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "marcocesarato/php-conventional-changelog": "^1.16"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bluestone\\Collection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "William",
            "email": "work@suppo.fr"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/phpcs --standard=PSR12 ./src"
        ],
        "tag": "vendor/bin/conventional-changelog --commit"
    }
}
